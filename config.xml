<?xml version='1.0' encoding='utf-8'?>
<widget id="com.todo.categories" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <name>TodoCategories</name>
  <description>App de tareas y categorías integrada con Cordova</description>
  <author email="you@example.com" href="http://example.com/">Jhon Heiler</author>

  <!-- Página inicial (archivo dentro de /www) -->
  <content src="index.html" />

  <!-- Permitir salir a internet / navegar -->
  <access origin="*" />
  <allow-navigation href="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
</widget>
